<form action="/sessions?_method=DELETE" method="POST">
  <input type="submit" value="Sign Out" />
</form>

{{! log out button }}

<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
    <li class="post">
      {{this.timestamp}}
      <br />
      {{this.username}}
      <br />
      {{this.message}}
      <form class="delete-post" action="/posts/delete" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="Delete" />
      </form>
      <div class="likes">Likes: {{this.likes}}</div>
      <form class="like-post" action="/posts/like" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="like" />
      </form>
       <a href='/posts/upload'>Add an image</a><br>
       <div class="post-image">
       {{#if this.flashMessage}}
       <img src="../public/uploads/{{this.flashMessage}}" class="image"/>
       {{/if}}
       </div>
    </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>